	script(src="//api-maps.yandex.ru/2.1/?lang=ru_RU")
	script.
		ymaps.ready(init);
		var myMap,
				coords = [[48.486370, 135.091787],[48.478173, 135.062304],[48.467500, 135.074406]],
				data_map = [
					'<span><b>Адрес: </b>г. Хабаровск, ул. Шевчука, 22</span>',
					'<span><b>Адрес: </b>г. Хабаровск, ул. Шевчука, 22</span>',
					'<span><b>Адрес: </b>г. Хабаровск, ул. Шевчука, 22</span>'
				];
		function init() {
				myMap = new ymaps.Map('map', {
						center: coords[0],
						zoom: 13,
						controls: []
				});
				for (var i = 0; i < coords.length; i++) {
						var myPlacemark = new ymaps.Placemark(coords[i], {
								balloonContent: data_map[i]
						}, {
								iconLayout: 'default#image',
								iconImageHref: 'img/maplogo.png',
								iconImageSize: [100, 100],
								iconImageOffset: [-9, -40]
						});
						myMap.geoObjects.add(myPlacemark);
				}
				myMap.controls.add('zoomControl', {});
				myMap.behaviors.disable('scrollZoom');
		}